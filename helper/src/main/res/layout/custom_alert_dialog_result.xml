<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/CustomDialogActionResultCommandMarginBottomContainer">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/CustomAlertDialogResultContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/CustomDialogActionResultCommandMarginBottomContainer"
                android:orientation="vertical" />
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/CustomAlertDialogResultCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/CustomAlertDialogResultOK"
            android:layout_width="@dimen/CustomDialogActionResultCommandSize"
            android:layout_height="@dimen/CustomDialogActionResultCommandSize"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/CustomDialogActionResultCommandMarginStartEnd"
            android:layout_marginBottom="@dimen/CustomDialogActionResultCommandMarginTopBottom"
            android:src="@drawable/pic_ok" />

        <ImageView
            android:id="@+id/CustomAlertDialogResultCancel"
            android:layout_width="@dimen/CustomDialogActionResultCommandSize"
            android:layout_height="@dimen/CustomDialogActionResultCommandSize"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/CustomDialogActionResultCommandMarginStartEnd"
            android:layout_marginBottom="@dimen/CustomDialogActionResultCommandMarginTopBottom"
            android:src="@drawable/pic_temporal_vencida" />

    </RelativeLayout>
</RelativeLayout>